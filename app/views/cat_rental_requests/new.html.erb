<h1>Add a new cat rental request!</h1>

<form action= "<%= cat_rental_requests_url %>" method="post">
<label for="cat_id">Cat Name</label>
<select id="cat_id" name="cat_rental_request[cat_id]">
  <option disabled selected>-- Please Select Cat --</option>
  <% Cat.all.each do |cat|%>
    <option value="<%=cat.id%>"> <%= cat.name %> </option>
  <% end %>
</select><br><br>

<label for="start_date">Start Date</label>
<input type="date" name="cat_rental_request[start_date]"><br><br>

<label for="end_date">End Date</label>
<input type="date" name="cat_rental_request[end_date]"><br><br>

<input type="submit" value="Add Rental">
</form>
