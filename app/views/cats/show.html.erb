<h1>This is your cat</h1>

<table>
  <thead>
    <tr>
      <th>Cat Details:</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Name:</td>
      <td><%=@cat.name%></td>
    </tr>
    <tr>
      <td>Birth Date:</td>
      <td><%=@cat.birth_date%></td>
    </tr>
    <tr>
      <td>Age:</td>
      <td><%=@cat.age%></td>
    </tr>
    <tr>
      <td>Color:</td>
      <td><%=@cat.color%></td>
    </tr>
    <tr>
      <td>Sex:</td>
      <td><%=@cat.sex%></td>
    </tr>
    <tr>
      <td>Description:</td>
      <td><%=@cat.description%></td>
    </tr>
  </tbody>
  <tfoot>
    <tr>
      <td>Please rent me :)</td>
    </tr>
  </tfoot>
</table><br>
<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %><br><br>
<%= button_to "Delete Cat", cat_url(@cat), :method => :delete %><br>
<%= button_to "Rent this cat", new_cat_rental_request_url, action: "new", :method => :get%><br>

<table>
  <thead>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @cat.rental_requests.order('start_date').each do |request| %>
    <tr>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.status %></td>
    </tr>
    <% end %>
  </tbody>
